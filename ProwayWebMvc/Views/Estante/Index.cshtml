<h1>Listar entantes</h1>

<div class="row"
    <div class="col">
        <div>
            <a class="btn btn-primary float-end" href="estante/novo">
                <i class "fa-solid fa-plus"></i> Nova estante
            </a>
        </div>
    </div>
<div>
<table class="table table-bordered table-striped mt-2">
    <thead>
        <tr>
            <th>Estante</th>
            <th>Nome</th>
            <th>Sigla</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estante in ViewBag.Estante)
        {
            <tr>
                <td>@estante.Id</td>
                <td>@estante.Nome</td>
                <td>@estante.Sigla</td>
                <td>
                    <a href="/estante/editar?Id=@estante.Id"
                    class="btn btn-primary">
                        <i class="fa-solid fa-pencil"></i> Editar
                    </a>
                    <a href="/estante/apagar?Id=@estante.Id"
                    class="btn btn-outline-danger">
                        <i class="fa-solid fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }


    </tbody>
</table>